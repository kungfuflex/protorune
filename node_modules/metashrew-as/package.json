{
  "name": "metashrew-as",
  "version": "0.1.0",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug --enable threads --config asconfig.json",
    "asbuild:release": "asc assembly/index.ts --target release --config asconfig.json",
    "build": "npm-run-all asbuild:debug asbuild:release build:lib",
    "build:lib": "tsc",
    "build:debug:preloader": "npm run asbuild:preloader --sharedMemory",
    "prettier:assemblyscript": "prettier --write ./assembly/**/*.ts",
    "prettier:ts": "prettier --write ./src.ts/**/*.ts",
    "prettier": "npm-run-all prettier:assemblyscript prettier:ts",
    "test": "ts-mocha --timeout 0 ./tests/**.spec.ts"
  },
  "devDependencies": {
    "@assemblyscript/wasi-shim": "^0.1.0",
    "@types/expect": "^24.3.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "as-wasi": "^0.6.0",
    "assemblyscript": "^0.27.22",
    "assemblyscript-prettier": "^3.0.1",
    "fs-extra": "^11.2.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "rlp": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "metashrew-test": "https://github.com/sandshrewmetaprotocols/metashrew-test.git"
  }
}
